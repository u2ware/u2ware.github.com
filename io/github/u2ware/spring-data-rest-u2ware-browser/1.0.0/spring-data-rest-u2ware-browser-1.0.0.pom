    <build>
     <plugins>
            <!-- jre-->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                   <source>${java.version}</source>
                   <target>${java.version}</target>
                </configuration>
            </plugin>

            <!-- build source.jar-->
            <plugin>
              <groupId>org.apache.maven.plugins</groupId>
              <artifactId>maven-source-plugin</artifactId>
              <executions>
                <execution>
                  <id>attach-sources</id>
                  <goals>
                    <goal>jar</goal>
                  </goals>
                </execution>
              </executions>
            </plugin>

            <!-- github-deploy-maven-plugin maven.test.skip=true-->
            <plugin>
                <groupId>com.github.github</groupId>
                <artifactId>site-maven-plugin</artifactId>
                <version>0.12</version>
                <configuration>
                    <message>${maven.build.timestamp}</message>
                    <noJekyll>true</noJekyll>
                    <outputDirectory>${u2ware-mvn-repo}</outputDirectory>
                    <branch>refs/heads/mvn-repo</branch>
                    <includes><include>**/*</include></includes>
                    <repositoryName>u2ware.github.com</repositoryName>
                    <repositoryOwner>u2ware</repositoryOwner>
                </configuration>
                <executions>
                  <execution>
                    <goals>
                      <goal>site</goal>
                    </goals>
                    <phase>deploy</phase>
                  </execution>
                </executions>
            </plugin>


		<plugin>
		   <artifactId>maven-jar-plugin</artifactId>
		   <configuration>
		     <archive>
		       <addMavenDescriptor>false</addMavenDescriptor>
		     </archive>
		   </configuration>
		 </plugin>
     </plugins>
    </build>  
 
</project>
